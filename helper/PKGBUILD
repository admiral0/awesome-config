pkgname=awesome-helperd
pkgver=0.1
pkgrel=1
pkgdesc="A helper to admiral0's script for xmms2-bar"
arch=(i686 x86_64 arm)
url="http://github.com/admiral0"
license=('GPL')
depends=("glib2" "xmms2")
source=(awesome-helper.c Makefile)

md5sums=('6524dcdbae7ecf1f86bae06d0cb5a92e'
         '1eb908691151d838463475aaf4bb94c4')
build() {
  cd "$srcdir"

  make || return 1
  make DESTDIR="$pkgdir/" install
}

